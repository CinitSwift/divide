# 服务器配置
PORT=3000
NODE_ENV=development

# Vercel Postgres 数据库配置
# 在 Vercel 上会自动注入这些环境变量
POSTGRES_URL=
POSTGRES_HOST=
POSTGRES_PORT=5432
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# 本地开发数据库配置 (如果没有设置 POSTGRES_URL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=game_team_divider

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# 微信小程序配置
WECHAT_APPID=your_wechat_appid
WECHAT_SECRET=your_wechat_secret
