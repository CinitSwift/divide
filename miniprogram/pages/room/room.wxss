.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 60rpx;
}

/* 房间头部 */
.room-header {
  padding: 36rpx;
  position: relative;
}

/* 顶部操作按钮区 */
.header-actions {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.share-icon-btn {
  width: 56rpx !important;
  height: 56rpx !important;
  min-height: 56rpx !important;
  border-radius: 50% !important;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-size: 26rpx;
  padding: 0 !important;
  margin: 0;
  border: none;
  line-height: 56rpx !important;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
  color: #fff;
}

.share-icon-btn::after {
  border: none;
}

.game-info {
  margin-bottom: 20rpx;
}

.game-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.room-code-box {
  display: inline-flex;
  align-items: center;
  background: #f0f5ff;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
}

.room-code {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.copy-icon {
  margin-left: 12rpx;
  font-size: 28rpx;
}

.room-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.owner-tag {
  font-size: 24rpx;
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0 16rpx;
  border-radius: 6rpx;
  height: 44rpx;
  line-height: 44rpx;
}

.status-tag {
  font-size: 24rpx;
  padding: 0 16rpx;
  border-radius: 6rpx;
  height: 44rpx;
  line-height: 44rpx;
}

/* 顶部关闭房间按钮 */
.close-room-btn {
  font-size: 24rpx;
  color: #ff4d4f;
  background: #fff1f0;
  padding: 0 16rpx;
  border-radius: 6rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin-left: auto;
}

.status-waiting {
  background: #e6f7ff;
  color: #1890ff;
}

.status-divided {
  background: #f6ffed;
  color: #52c41a;
}

/* 成员区域 */
.members-section {
  padding: 30rpx;
  margin-top: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.member-count {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.members-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.member-item {
  width: calc(25% - 18rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

/* 成员选中状态 */
.member-item.selected .member-avatar {
  border: 4rpx solid #ff4d4f;
  box-sizing: border-box;
}

/* 头像容器 */
.avatar-wrapper {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 12rpx;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #e0e0e0;
}

/* 删除图标 */
.remove-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(255, 77, 79, 0.4);
  z-index: 10;
}

.member-name {
  font-size: 24rpx;
  color: #666;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.owner-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  font-size: 20rpx;
  color: #fff;
  background: #ff9800;
  padding: 0 10rpx;
  border-radius: 10rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
}

/* 空位 */
.member-item.empty {
  opacity: 0.5;
}

.empty-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f0f0f0;
  border: 4rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #ccc;
  margin-bottom: 12rpx;
}

.empty-text {
  font-size: 22rpx;
  color: #ccc;
}

/* 操作区域 */
.action-section {
  margin-top: 40rpx;
}

/* 按钮同行布局 */
.action-row {
  display: flex;
  gap: 20rpx;
}

.action-row .rule-btn {
  flex: 1;
  margin: 0;
}

.action-row .divide-btn {
  flex: 1;
  margin: 0;
}

.divide-btn {
  margin-bottom: 24rpx;
}

.share-btn {
  margin-bottom: 24rpx;
}

.leave-btn {
  margin-top: 20rpx;
}

/* 等待提示 */
.waiting-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: #fff7e6;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.waiting-tips .tips-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.waiting-tips .tips-text {
  font-size: 30rpx;
  color: #d48806;
}

/* 加入提示 */
.join-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: #e6f7ff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.join-tips .tips-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.join-tips .tips-text {
  font-size: 30rpx;
  color: #1890ff;
}

.join-btn {
  margin-bottom: 24rpx;
}

/* 标签提示 */
.label-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 12rpx;
  background: #fafafa;
  border-radius: 8rpx;
}

/* 成员标签 */
.member-labels {
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  gap: 4rpx;
  margin-top: 8rpx;
  width: 100%;
}

.label-tag {
  font-size: 16rpx;
  padding: 0 6rpx;
  border-radius: 4rpx;
  color: #fff;
  width: 40%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  height: 28rpx;
  line-height: 28rpx;
}

.label-more {
  background: #999;
  width: 20%;
  min-width: 24rpx;
}

.label-god {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}

.label-sister {
  background: linear-gradient(135deg, #ff9ff3 0%, #f368e0 100%);
}

.label-male {
  background: linear-gradient(135deg, #54a0ff 0%, #2e86de 100%);
}

.label-boss {
  background: linear-gradient(135deg, #feca57 0%, #ff9f43 100%);
}

/* 规则设置按钮 */
.rule-btn {
  margin-bottom: 20rpx;
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

/* 弹窗内容 */
.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.modal-header {
  padding: 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.modal-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.modal-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  border-radius: 0;
  border: none;
  background: #fff;
}

.modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #667eea;
  font-weight: 600;
}

.modal-btn::after {
  border: none;
}

/* 标签选项列表 */
.label-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.label-option {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.label-option.checked {
  background: #e8f4fd;
  border: 2rpx solid #667eea;
}

.label-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #667eea;
}

.label-option.checked .label-checkbox {
  background: #667eea;
  border-color: #667eea;
  color: #fff;
}

.label-name {
  font-size: 30rpx;
  color: #333;
}

/* 规则列表 */
.rule-modal {
  width: 650rpx;
}

.rule-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.rule-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.rule-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.rule-picker {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.picker-arrow {
  margin-left: 12rpx;
  font-size: 20rpx;
  color: #999;
}

.rule-note {
  margin-top: 24rpx;
  padding: 20rpx;
  background: #fff7e6;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #d48806;
}

/* 查看所有标签弹窗 */
.all-labels-modal {
  width: 500rpx;
}

.all-labels-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: center;
}

.label-tag-big {
  font-size: 28rpx;
  padding: 0 32rpx;
  border-radius: 12rpx;
  color: #fff;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
}

.label-tag-big.label-god {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
}

.label-tag-big.label-sister {
  background: linear-gradient(135deg, #ff9ff3 0%, #f368e0 100%);
}

.label-tag-big.label-male {
  background: linear-gradient(135deg, #54a0ff 0%, #2e86de 100%);
}

.label-tag-big.label-boss {
  background: linear-gradient(135deg, #feca57 0%, #ff9f43 100%);
}

.modal-footer.single-btn {
  border-top: 1rpx solid #f0f0f0;
}

.modal-footer.single-btn .modal-btn {
  border-right: none;
}
