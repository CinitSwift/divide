.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 60rpx;
}

/* 房间头部 */
.room-header {
  padding: 36rpx;
}

.game-info {
  margin-bottom: 20rpx;
}

.game-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.room-code-box {
  display: inline-flex;
  align-items: center;
  background: #f0f5ff;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
}

.room-code {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.copy-icon {
  margin-left: 12rpx;
  font-size: 28rpx;
}

.room-meta {
  display: flex;
  gap: 16rpx;
}

.owner-tag {
  font-size: 24rpx;
  color: #fff;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.status-tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.status-waiting {
  background: #e6f7ff;
  color: #1890ff;
}

.status-divided {
  background: #f6ffed;
  color: #52c41a;
}

/* 成员区域 */
.members-section {
  padding: 30rpx;
  margin-top: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.member-count {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
}

.members-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.member-item {
  width: calc(25% - 18rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

/* 成员选中状态 */
.member-item.selected .member-avatar {
  border: 4rpx solid #ff4d4f;
  box-sizing: border-box;
}

/* 头像容器 */
.avatar-wrapper {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 12rpx;
}

.member-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #e0e0e0;
}

/* 删除图标 */
.remove-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(255, 77, 79, 0.4);
  z-index: 10;
}

.member-name {
  font-size: 24rpx;
  color: #666;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.owner-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  font-size: 20rpx;
  color: #fff;
  background: #ff9800;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

/* 空位 */
.member-item.empty {
  opacity: 0.5;
}

.empty-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f0f0f0;
  border: 4rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #ccc;
  margin-bottom: 12rpx;
}

.empty-text {
  font-size: 22rpx;
  color: #ccc;
}

/* 操作区域 */
.action-section {
  margin-top: 40rpx;
}

.divide-btn {
  margin-bottom: 24rpx;
}

.share-btn {
  margin-bottom: 24rpx;
}

.close-btn {
  margin-top: 20rpx;
}

.leave-btn {
  margin-top: 20rpx;
}

/* 等待提示 */
.waiting-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: #fff7e6;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.waiting-tips .tips-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.waiting-tips .tips-text {
  font-size: 30rpx;
  color: #d48806;
}

/* 加入提示 */
.join-tips {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background: #e6f7ff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.join-tips .tips-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.join-tips .tips-text {
  font-size: 30rpx;
  color: #1890ff;
}

.join-btn {
  margin-bottom: 24rpx;
}
