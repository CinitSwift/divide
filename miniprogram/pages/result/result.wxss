.container {
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9ff 0%, #f0f2f5 100%);
}

/* 头部 */
.result-header {
  text-align: center;
  padding: 40rpx 0;
}

.result-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.game-name {
  font-size: 30rpx;
  color: #666;
}

/* 队伍容器 */
.teams-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

/* 队伍卡片 */
.team-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.team-a {
  border-left: 8rpx solid #1890ff;
}

.team-b {
  border-left: 8rpx solid #ff4d4f;
}

.team-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.team-badge {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  margin-right: 16rpx;
}

.badge-a {
  background: linear-gradient(135deg, #1890ff 0%, #69c0ff 100%);
}

.badge-b {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.team-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.team-count {
  font-size: 28rpx;
  color: #999;
}

/* 队伍成员 */
.team-members {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.team-member {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: calc(25% - 18rpx);
}

.member-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #e0e0e0;
  margin-bottom: 12rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.team-a .member-avatar {
  border-color: rgba(24, 144, 255, 0.3);
}

.team-b .member-avatar {
  border-color: rgba(255, 77, 79, 0.3);
}

.member-name {
  font-size: 24rpx;
  color: #666;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.empty-tip {
  width: 100%;
  text-align: center;
  padding: 40rpx 0;
  color: #ccc;
  font-size: 28rpx;
}

/* VS 分隔 */
.vs-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.vs-text {
  font-size: 48rpx;
  font-weight: 800;
  color: #333;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 操作区域 */
.action-section {
  margin-top: 40rpx;
}

.redivide-btn {
  margin-bottom: 24rpx;
}

.back-btn {
  margin-bottom: 24rpx;
}

.share-btn {
  background: #fff !important;
  color: #666 !important;
  border: 2rpx solid #e0e0e0;
}
