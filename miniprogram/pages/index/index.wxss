.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

/* 用户卡片 */
.user-card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
}

.user-info {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.welcome {
  font-size: 26rpx;
  color: #999;
}

/* 操作区域 */
.action-section {
  margin-top: 30rpx;
}

.action-card {
  display: flex;
  align-items: center;
  padding: 36rpx 30rpx;
  margin-bottom: 20rpx;
}

.action-card:active {
  background: #f9f9f9;
}

.action-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.action-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.action-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 26rpx;
  color: #999;
}

.action-arrow {
  font-size: 40rpx;
  color: #ccc;
}

/* 我的房间 */
.my-room-section {
  margin-top: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.room-card {
  padding: 30rpx;
}

.room-card:active {
  background: #f9f9f9;
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.room-code {
  font-size: 26rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.room-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.member-count {
  font-size: 28rpx;
  color: #666;
}

.room-status {
  font-size: 26rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.status-waiting {
  background: #e6f7ff;
  color: #1890ff;
}

.status-divided {
  background: #f6ffed;
  color: #52c41a;
}

.status-closed {
  background: #fff1f0;
  color: #ff4d4f;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 40rpx;
}

.room-input {
  text-align: center;
  font-size: 40rpx;
  letter-spacing: 16rpx;
  margin-bottom: 40rpx;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx !important;
  font-size: 30rpx !important;
}
